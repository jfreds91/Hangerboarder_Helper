<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/runWorkoutTimerText"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

    <TextView
        android:id="@+id/runWorkoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="default text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:visible="false"/>


    <TextView
        android:id="@+id/runWorkoutTimerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="90sp"
        android:paddingBottom="15dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#00000000"
        android:layout_below="@+id/RWA_TopLayout" />

    <LinearLayout
        android:id="@+id/timerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/progressbar"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/runWorkoutStartPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/runWorkoutResetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lastWeightLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerButtons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous weight added:"
            android:textSize="20sp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/lastWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastWeightLL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current weight added:"
            android:layout_marginRight="20dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/thisWeightEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:hint="00"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/runWorkoutProceedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to next"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RWA_TopLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_gravity="center">

            <TextView
                android:text="Workout Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RWA_WorkoutName"
                android:layout_weight="1"
                android:background="#00000000" />

            <TextView
                android:text="iteration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RWA_iteration"
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_gravity="right"
                android:gravity="right" />
        </LinearLayout>

        <TextView
            android:text="Exercise Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RWA_ExerciseName"
            android:background="@drawable/rect"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:text="Exercise Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RWA_ExerciseType"
            android:background="#00000000" />

    </LinearLayout>


</RelativeLayout>