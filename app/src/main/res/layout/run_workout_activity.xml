<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/runWorkoutTimerText"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_states"/>

    <TextView
        android:id="@+id/runWorkoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="default text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/runWorkoutTimerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="00:00:00"
        android:textSize="90sp"
        android:paddingBottom="15dp"
        android:background="#00000000"
        android:layout_below="@+id/RWA_TopLayout"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:shadowDx="10"
        android:shadowDy="10"
        />





    <LinearLayout
        android:id="@+id/timerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/progressbar"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/runWorkoutStartPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/runWorkoutResetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>






    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RWA_TopLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_gravity="center">

            <TextView
                android:text="Workout Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RWA_WorkoutName"
                android:layout_weight="1"
                android:background="#00000000" />

            <TextView
                android:text="iteration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RWA_iteration"
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_gravity="end"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:text="Exercise Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RWA_ExerciseName"
            android:background="@drawable/rect"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center_horizontal" />

        <TextView
            android:text="Exercise Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RWA_ExerciseType"
            android:background="#00000000" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RWA_WeightInfoLL"
        android:layout_below="@id/timerButtons">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous weight added:"
            android:textSize="20sp"
            android:gravity="end"
            android:id="@+id/PrevWeightTV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current weight added:"
            android:textSize="20sp"
            android:id="@+id/CurrWeightTV"
            android:layout_below="@id/PrevWeightTV"

            android:layout_alignRight="@id/PrevWeightTV"
            android:gravity="center_vertical"/>


        <TextView
            android:id="@+id/lastWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="20sp"
            android:layout_toEndOf="@id/PrevWeightTV"
            android:layout_toRightOf="@id/PrevWeightTV"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/thisWeightEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:hint="00"
            android:textSize="20sp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:textColor="#cecece"
            android:layout_toEndOf="@id/CurrWeightTV"
            android:layout_toRightOf="@id/CurrWeightTV"
            android:layout_alignBottom="@id/CurrWeightTV"
            android:layout_alignLeft="@id/lastWeightTextView"/>

    </RelativeLayout>

    <Button
        android:id="@+id/runWorkoutProceedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to next"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>